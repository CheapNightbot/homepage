---
const { mobile = false, title } = Astro.props;
---

<div
  class={mobile
    ? "flex flex-col items-center gap-6 py-8"
    : "flex p-4 items-center justify-around gap-10 text-lg"}
>
  {
    title && !mobile && (
      <p class="font-bold text-indigo-300 text-2xl">{title}</p>
    )
  }
  <div
    class={mobile
      ? "flex flex-col items-center gap-6 w-full"
      : "flex p-4 items-center justify-center gap-6 text-lg"}
  >
    <a
      href="/"
      class={mobile
        ? "block w-full text-center py-3 rounded text-lg hover:bg-indigo-900 transition"
        : undefined}>Home</a
    >
    <a
      href="/projects"
      class={mobile
        ? "block w-full text-center py-3 rounded text-lg hover:bg-indigo-900 transition"
        : undefined}>Projects</a
    >
    <a
      href="/blog"
      class={mobile
        ? "block w-full text-center py-3 rounded text-lg hover:bg-indigo-900 transition"
        : undefined}>Blog</a
    >
    <a
      href="/about"
      class={mobile
        ? "block w-full text-center py-3 rounded text-lg hover:bg-indigo-900 transition"
        : undefined}>About</a
    >
  </div>
</div>

<style>
  a {
    padding: calc(var(--spacing) * 2);
  }
  a:hover {
    background: var(--color-indigo-500);
  }
</style>
